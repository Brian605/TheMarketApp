<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:theme="@style/AppTheme"
    tools:context=".activities.MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        style="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:background="@color/whiteTransparent"
        android:layout_height="@dimen/flipper_height">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/whiteTransparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="start|top"
            app:collapsedTitleGravity="start|top"
            app:expandedTitleMarginEnd="40dp"
            app:expandedTitleMargin="10dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:toolbarId="@id/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <ViewFlipper
            android:layout_width="match_parent"
           android:layout_marginTop="7dp"
            android:layout_height="@dimen/flipper_height"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/toolbar"
            android:id="@+id/FlipV">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img7"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    tools:ignore="ContentDescription"
                    android:tag="flipper Image" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/loginbac"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/matura_capitals"
                    android:text="@string/a_wide_range_of_products"
                    android:gravity="center"
                    android:textSize="@dimen/field_text_size"
                   android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img8"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/loginbac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shoes_and_footwear"
                    android:fontFamily="@font/matura_capitals"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img11"
                    android:scaleType="centerCrop" />
                <TextView
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clothes_and_bodywear"
                    android:background="@drawable/loginbac"
                    android:fontFamily="@font/matura_capitals"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/electronics"
                    android:scaleType="centerCrop" />
                <TextView
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phones"
                    android:fontFamily="@font/matura_capitals"
                    android:background="@drawable/loginbac"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            </RelativeLayout>


        </ViewFlipper>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/lessGreen"
        app:layout_collapseMode="pin"
        android:id="@+id/toolbar"
        app:collapseIcon="@drawable/logo"
        app:titleTextColor="@color/whiteTransparent"
        app:titleMargin="10dp"
        app:title="The Market"
        />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/lightback"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:text="@string/pick_a_category_to_begin"
                android:padding="5dp"
                android:id="@+id/pick"
                android:layout_centerHorizontal="true"
                android:background="@drawable/loginbac"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_marginBottom="5dp"/>

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainRecyclerShowcase"
                android:layout_below="@+id/pick"
                android:layout_centerInParent="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/pick"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/recycler"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
